<Runbook>
    <Name>RefreshEnvironmentsStatusLCS</Name>
    <Settings>
        <Start>https://lcs.dynamics.com/login/adlogon</Start>
        <Browser>Chrome</Browser>
        <WindowsSizeWidth>1920</WindowsSizeWidth>
        <WindowsSizeHeight>1080</WindowsSizeHeight>
        <ImplicitWaitTime>10</ImplicitWaitTime>
        <Variables>
            <Variable>{Username}</Variable>
            <Variable>{Password}</Variable>
            <Variable>{ProjectName}</Variable>
        </Variables>
    </Settings>
    <Step>
        <ElementName>UsernameEntry</ElementName>
        <By>Id</By>
        <GetElement>i0116</GetElement>
        <SendKeys>{Username}</SendKeys>
    </Step>
    <Step>
        <ElementName>UsernameNext</ElementName>
        <GetElement>idSIButton9</GetElement>
        <ClickElement></ClickElement>
    </Step>
    <Step>
        <Sleep>7</Sleep>
    </Step>
    <Step>
        <ElementName>PasswordElement</ElementName>
        <By>Id</By>
        <GetElement>i0118</GetElement>
        <SendKeys>{Password}</SendKeys>
    </Step>
    <Step>
        <ElementName>PasswordElement</ElementName>
        <GetElement>i0118</GetElement>
        <By>Id</By>
        <SendKeys>`[Enter]</SendKeys>
    </Step>
    <Step>
        <ElementName>AllProjectsElement</ElementName>
        <By>XPath</By>
        <GetElement>//*[contains(text(), 'All projects')]</GetElement>
        <ClickElement>Click</ClickElement>
    </Step>
    <Step>
        <ElementName>SpecificProjectElement</ElementName>
        <By>XPath</By>
        <GetElement>//*[contains(text(), '{ProjectName}')]</GetElement>
        <ClickElement></ClickElement>
    </Step>
    <Step>
        <ElementName>SpecificProjectParentElement</ElementName>
        <By>XPathParent</By>
        <GetElement>SpecificProjectElement</GetElement>
        <ClickElement>Click_JS</ClickElement>
    </Step>
</Runbook>